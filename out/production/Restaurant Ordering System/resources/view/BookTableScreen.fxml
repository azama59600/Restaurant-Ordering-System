<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="431.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.BookTableScreenController">
   <children>
      <HBox>
         <children>
            <Label styleClass="header-text" text="01">
               <HBox.margin>
                  <Insets right="6.0" />
               </HBox.margin></Label>
            <Label maxWidth="1.7976931348623157E308" styleClass="header-text" text="BOOK TABLE" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets />
               </HBox.margin></Label>
         </children>
         <VBox.margin>
            <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER" styleClass="main-content-wide" VBox.vgrow="ALWAYS">
         <children>
            <VBox alignment="CENTER_LEFT" prefHeight="200.0">
               <children>
                  <VBox>
                     <children>
                        <Label styleClass="content-text" text="Select Your Table" />
                        <ComboBox fx:id="tableComboBox" maxWidth="1.7976931348623157E308" styleClass="combo-box" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
                     </VBox.margin>
                  </VBox>
                  <VBox>
                     <children>
                        <Label styleClass="content-text" text="Select Number of Diners" />
                        <ComboBox fx:id="dinerNumComboBox" maxWidth="1.7976931348623157E308" styleClass="combo-box" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
                     </VBox.margin>
                  </VBox>
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_RIGHT" styleClass="deck-bar-hbox">
         <children>
            <Button fx:id="backBtn" mnemonicParsing="false" onAction="#backPressed" styleClass="deck-bar-btn" text="Back" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="errorLabel" styleClass="error-text"/>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="nextBtn" mnemonicParsing="false" onAction="#nextPressed" styleClass="deck-bar-btn" text="Next" />
         </children>
         <VBox.margin>
            <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
