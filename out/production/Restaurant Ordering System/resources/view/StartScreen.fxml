<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="BOTTOM_CENTER" prefHeight="448.0" prefWidth="594.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.StartScreenController">
    <children>
        <HBox alignment="BOTTOM_LEFT" spacing="7.0">
            <padding>
                <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
            </padding>
        </HBox>
        <Region VBox.vgrow="ALWAYS" />
      <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
         <children>
            <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
               <children>
                  <Label alignment="BOTTOM_LEFT" text="RESTAURANT">
                     <font>
                        <Font name="Bernard MT Condensed" size="96.0" />
                     </font>
                  </Label>
                    <Button fx:id="orderFoodBtn" alignment="TOP_LEFT" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#orderFoodPressed" styleClass="wide-button, menu-button" text="ORDER FOOD">
                     <VBox.margin>
                        <Insets bottom="3.0" top="3.0" />
                     </VBox.margin></Button>
                      <Button fx:id="manageBtn" alignment="TOP_LEFT" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#manageBtnPressed" styleClass="wide-button, second-color, menu-button" text="MANAGE">
                     <VBox.margin>
                        <Insets bottom="3.0" top="3.0" />
                     </VBox.margin></Button>
                  <Label fx:id="errorLabel" styleClass="error-text" text="Error! Something went wrong.">
                     <VBox.margin>
                        <Insets bottom="3.0" top="3.0" />
                     </VBox.margin></Label>
               </children>
               <HBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </HBox.margin>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
        <Region VBox.vgrow="ALWAYS" />
    </children>
</VBox>
